{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "app exe",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\pyinstaller.exe",
            "args": [
                "app.spec",
                "--noconfirm"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\src\\midiplayer"
            }
        },
        {
            "label": "updater exe",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\pyinstaller.exe",
            "args": [
                "updater.spec",
                "--noconfirm"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\src\\midiplayer"
            }
        },
        {
            "label": "package update zip",
            "type": "shell",
            "windows": {
                "command": "& 'C:\\Program Files\\7-Zip\\7z.exe' a -tzip '${workspaceFolder}\\src\\midiplayer\\dist\\midiplayer-updater-package.zip' '${workspaceFolder}\\src\\midiplayer\\dist\\midiplayer\\*'"
            },
            "problemMatcher": [
                "$python"
            ]
        },
        {
            "label": "app with updater exe",
            "dependsOn": [
                "updater exe",
                "app exe",
                "package update zip"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}